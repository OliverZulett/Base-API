{
  "name": "base-api",
  "version": "1.0.0",
  "description": "A base project api",
  "main": "./dist/server.js",
  "scripts": {
    "clean": "npx rimraf dist",
    "build": "npm run format:fix & npm run clean && npx tsc",
    "format": "npx prettier 'src/**/*.ts'",
    "format:fix": "npx prettier --write 'src/**/*.ts'",
    "start": "node --require dotenv/config ./dist/server.js",
    "start:dev": "npm run format:fix && npx nodemon",
    "start:prod": "npm run build && npm run start"
  },
  "author": "Oliver Zulett",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^10.0.0",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^16.6.1",
    "nodemon": "^2.0.12",
    "prettier": "2.3.2",
    "rimraf": "^3.0.2",
    "ts-node": "^10.2.0",
    "typescript": "^4.3.5"
  }
}
